{
  "name": "ChestXsim",
  "image": "chestxsim",
  "runArgs": ["--gpus", "all"],
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-toolsai.jupyter"]
    }
  },
  "remoteUser": "root"
}